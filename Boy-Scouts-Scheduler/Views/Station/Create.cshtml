            }*@

        <div>
            <table>
                <tr>                
                    <th>@Html.Label("Monday")</th>
                    <th>@Html.Label("Tuesday")</th>
                    <th>@Html.Label("Wednesday")</th>
                    <th>@Html.Label("Thursday")</th>   
                    <th>@Html.Label("Friday")</th>
                </tr>

                @{
                    bool[] slots = new bool[25];
                }

                @for (int i = 0; i < 5; i++)
                {
                    <tr>
                        @for (int j = 0; j < dayCount[i]; j++)
                        {
                            <td>@Html.CheckBoxFor(model => slots[j])</td>
                        }
                    </tr>
                }

            </table>
        </div>
        
        <p>
            <input type="submit" value="Create" />
        </p>

    </fieldset>
}

