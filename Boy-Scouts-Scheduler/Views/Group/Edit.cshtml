@model Boy_Scouts_Scheduler.Models.Group

<tr @if (Model != null) {
    @:data-pkey="@Model.ID"
}>
    <td>
        @Html.EditorFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name)
    </td>
    <td>
        @Html.DropDownListFor(model => model.Type, new SelectList(ViewBag.GroupTypes, "GroupTypeID", "Name")) 
        @Html.ValidationMessageFor(model => model.Type.Name)
    </td>
    <!--<td>
        @Html.EditorFor(model => model.Members)
        @Html.ValidationMessageFor(model => model.Members)
    </td>-->

    <td>
    @if (ViewContext.RouteData.Values["Action"].ToString() == "Edit")
    {
        <button class="editRow">Save</button><button class="cancelEditRow">Cancel</button>
    }
    else
    {
        <button class="createRow">Create</button><button class="cancelCreateRow">Cancel</button>
    }
    </td>
</tr>
